{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mdp{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser votre mdp</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mdp.
                lien pour réinitialiser votre mdp.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer un mail de réinitialisation du mdp</button>
    {{ form_end(requestForm) }}
{% endblock %}
